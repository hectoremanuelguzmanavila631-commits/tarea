/* DEFAULT STYLES (Mobile First) */
.columna {
    width: 100%; /* Columns take up the full width on mobile */
    margin-bottom: 20px;
}

/* MEDIA QUERY for Larger Screens (Tablets and Desktops) */
@media (min-width: 768px) {
    /* The main container centers the content on large screens */
    .contenedor {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    /* Columns now float or use flex/grid to display side-by-side */
    .fila-proyectos {
        display: flex;
        gap: 20px;
    }
    .columna {
        width: calc(33.333% - 13.333px); /* 3 columns with space between them */
        margin-bottom: 0;
    }
    
    /* Hide the hamburger menu button on desktop */
    #menu-toggle {
        display: none;
    }
}
